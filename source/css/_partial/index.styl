.post-list
  padding: 0

  .post-item
    margin-bottom: 1rem
    margin-left: 0
    list-style-type: none

    .meta
      display: block
      margin-right: 16px
      min-width: 100px
      color: $color-meta
      font-size: 14px

@media (min-width: 480px)
  .post-list
    .post-item
      display: flex
      margin-bottom: 5px

      .meta
        text-align: left

.project-list
  padding: 0
  list-style: none

  .project-item
    margin-bottom: 5px
    p
      display: inline

.content-page
  .content
    p
      font-size: 1.5em
      line-height: 2
    h1
      text-align: center
      font-size: 7em
      margin: 0
    h2
      font-size: 2em
      text-align: center
      margin: 0
      color: $color-accent-4
      padding-left: 0
    h2:before
      display: none
    h3
      font-size: 3em
      margin-top: 3em
      text-decoration: none

.index-logo img
  width: 200px
  height: 200px
